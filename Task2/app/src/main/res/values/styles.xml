<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Buisness card styles -->
    <style name="BuisnessCardItemMargin">
        <item name="android:layout_marginLeft">@dimen/buisness_card_item_margin</item>
        <item name="android:layout_marginStart">@dimen/buisness_card_item_margin</item>
        <item name="android:layout_marginRight">@dimen/buisness_card_item_margin</item>
        <item name="android:layout_marginEnd">@dimen/buisness_card_item_margin</item>
        <item name="android:layout_marginTop">@dimen/buisness_card_item_half_margin</item>
        <item name="android:layout_marginBottom">@dimen/buisness_card_item_half_margin</item>
    </style>

    <style name="BuisnessCardItemHeight" parent="BuisnessCardItemMargin">
        <item name="android:layout_height">@dimen/buisness_card_item_size</item>
    </style>

    <style name="BuisnessCardItemKeyInfo" parent="BuisnessCardItemHeight">
        <item name="android:drawablePadding">@dimen/buisness_card_item_half_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BuisnessCardItemSocial">
        <item name="android:layout_width">@dimen/buisness_card_item_size</item>
        <item name="android:layout_height">@dimen/buisness_card_item_size</item>
        <item name="android:layout_marginLeft">@dimen/buisness_card_item_half_margin</item>
        <item name="android:layout_marginStart">@dimen/buisness_card_item_half_margin</item>
        <item name="android:layout_marginRight">@dimen/buisness_card_item_half_margin</item>
        <item name="android:layout_marginEnd">@dimen/buisness_card_item_half_margin</item>
    </style>

    <!-- Utils -->
    <style name="BuisnessCardDivider" parent="BuisnessCardItemMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>

</resources>
